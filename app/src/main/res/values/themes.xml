<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RePoth" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_kai</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="background">@color/grey_light</item>
    </style>

    <style name="BottomNavbarText">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="OnboardingPicShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>
    <style name="OnboardingImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">125dp</item>

        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="shapeAppearanceOverlay">@style/OnboardingPicShape</item>
    </style>

    <style name="OnboardingImage.Transparent">
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="OnboardingText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>

        <item name="android:src">@drawable/back_btn_icon</item>

        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="BackButton.OnDarkBackground">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="PageHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="PageHeader.Emoji">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="PageHeader.Text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22sp</item>

        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.RePoth" parent="Base.Theme.RePoth">

    </style>

    <!-- Toolbar -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="elevationOverlayEnabled">true</item>
    </style>
    <style name="Card">
        <item name="cardElevation">35dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>
    <style name="Card.Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="Card.Settings.PartIntro">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Card.Settings.Creator">
        <item name="android:layout_width">0dp</item>

        <item name="android:alpha">0.99</item>
    </style>

    <style name="Card.Settings.Creator.Left">
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Card.Settings.Creator.Right">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Card.Settings.Creator.Left.Android">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="Card.Settings.Creator.Left.Ai">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="Card.Settings.Creator.Left.Cloud">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="Card.Settings.Creator.Right.Android">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="Card.Settings.Creator.Right.Ai">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="Card.Settings.Creator.Right.Cloud">
        <item name="cardBackgroundColor">@color/bg_soft_brown</item>
    </style>

    <style name="CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardText.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardText.SettingsPart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardText.SettingsPart.SmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardText.Settings">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardText.Settings.LowerText">
        <item name="android:layout_margin">3dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsText.Header">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingsText.Small">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


</resources>