<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RePoth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="BottomNavbarText">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="OnboardingPicShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>
    <style name="OnboardingImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">125dp</item>

        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="shapeAppearanceOverlay">@style/OnboardingPicShape</item>
    </style>

    <style name="OnboardingImage.Transparent">
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="OnboardingText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>

        <item name="android:src">@drawable/back_btn_icon</item>

        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="BackButton.OnDarkBackground">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="PageHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="PageHeader.Emoji">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="PageHeader.Text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22sp</item>

        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="Theme.RePoth" parent="Base.Theme.RePoth" />
</resources>