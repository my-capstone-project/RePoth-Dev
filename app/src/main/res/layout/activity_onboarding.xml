<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryContainer"
    app:layoutDescription="@xml/activity_onboarding_scene"
    tools:context=".ui.view.home.OnboardingActivity"
    android:id="@+id/Onboarding">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/onboarding_img_placeholder"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_marginBottom="125dp"
        android:src="@drawable/notification_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onboarding_text_a"
        style="@style/TextAppearance.AppCompat.Body1"
        android:alpha="0"
        android:text="@string/onboarding_text"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/go_to_home_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_img_placeholder" />

</androidx.constraintlayout.motion.widget.MotionLayout>